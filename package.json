    "start": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/' --exec 'ts-node src/index.ts' -e ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'"
